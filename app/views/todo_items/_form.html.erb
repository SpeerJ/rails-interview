<%= turbo_frame_tag 'todo_item_form' do %>
    <%= form_with(model: [todo_list, todo_item]) do |form| %>
    <div class="grid items-center space-y-5">

    <% if todo_item.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

          <ul>
            <% todo_item.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.submit "Save",
                      class: "text-blue-600 hover:underline font-medium text-sm" %>

      <div class="grid items-center space-y-1">
        <strong class="mr-2">Title: </strong>
        <%= form.text_field :name %>
      </div>

      <div class="grid items-center space-y-1">
        <strong class="mr-2">Description: </strong>
        <%= form.text_area :description %>
      </div>
    </div>

  <% end %>
<% end %>