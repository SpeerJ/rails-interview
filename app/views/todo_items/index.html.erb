<p style="color: green"><%= notice %></p>
<%= turbo_frame_tag "todo" do %>
  <h1>Todo items</h1>

  <div id="todo_items">
    <% @todo_items.each do |todo_item| %>
      <%= turbo_frame_tag dom_id(todo_item) do %>
        <%= render todo_item %>
      <% end %>
    <% end %>
  </div>
  <%= link_to "New todo item", new_todo_list_item_path %>
<% end %>
