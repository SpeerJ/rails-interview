<div class="space-y-10">
  <% if notice.present? %>
    <div class="mb-4 px-4 py-2 bg-green-50 border border-green-200 text-green-800 rounded">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-6">
    <%= render 'index', todo_items: @todo_items %>
  </div>

  <div class="mb-6">
    <%= render 'new' %>
  </div>

  <div class="flex items-center justify-between mt-8">
    <div>
      <%= form_with(url: toggle_all_completed_todo_list_todo_items_path(@todo_list), method: :patch, html: { class: "flex items-center gap-2" }) do |form| %>
        <%= check_box_tag 'complete_all', '1', @all_completed, onchange: 'this.form.requestSubmit()', class: "h-5 w-5 rounded text-green-600 border-gray-300 focus:ring-green-500" %>
        <%= form.label 'complete_all', 'Complete All', class: "text-gray-700 text-sm" %>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to Todo Lists", todo_lists_path,
              class: "px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 font-medium text-sm" %>
</div>