<%= turbo_frame_tag "todo_list_form" do %>
  <%= form_with(model: @todo_list, html: {class: "flex mt-4 items-center font-semibold text-lg text-gray-800 justify-between p-4 bg-white rounded shadow-sm border border-gray-200"}) do |form| %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Name
      </label>
      <%= form.text_field :name, class: "block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= form.submit "Save",
                      class: "text-blue-600 hover:underline font-medium text-sm" %>
    </div>
  <% end %>
<% end %>
